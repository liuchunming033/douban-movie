.post-container{
  display: flex;
  flex-direction: column;
  margin:20rpx 0 40rpx 0;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom: 5px;
  background-color: #fff;
}
.post-author-date{
  margin:10rpx 0 20rpx 20rpx;
}
.post-author{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom:5px;
  font-size: 26rpx;
}
.post-title{
  font-size:34rpx;
  font-weight: 600;
  margin:0 0 10px 20rpx;
  display: block;
  color:#333;
}
.post-image{
  margin:auto 0;
  margin-left:20rpx;
  margin-bottom:15px;
  width:100%;
  height: 340rpx;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin-bottom: 20rpx;
  margin-left:20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size:13px;
  margin-left:10px;
  flex-direction: row;
  line-height: 16px;

}
.post-like-image{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-left: 8px;
}
.post-like-text{
  vertical-align: middle;
  margin-left:3px;
}
