.pd_container {
  display: flex;
  flex-direction: column;
  position: relative;
}

.pd_image {
  width: 100%;
  height: 600rpx;
}

.pd_avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.pd_audio{
  width:102rpx;
  height: 110rpx;
  position: absolute;
  top:245rpx;
  left:50%;
  margin-left: -51rpx;
}
.pd_head {
  margin: 10px 0;
  margin-left: 20rpx;
}
.pd_head text{
  padding-left:15rpx;
}
.pd_title {
  font-size: 30rpx;
  font-weight: 900;
  margin-left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.pd_pos{
  position: relative;
}
.pd_share {
  display: flex;
  justify-content: flex-end;
  
}

.pd_share image {
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx 30rpx 20rpx 0;
  
}
.pd_line{
  height:1px;
  width:100%;
  background-color: #eee;
  position: absolute;
  top:50%;
  z-index: -100
}
.pd_detail {
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  color:#666;
}
